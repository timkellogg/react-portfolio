#!/bin/bash

export $(cat .env | grep -v ^# | xargs)

if [ "$#" != "1" ]; then
  echo "Usage: deploy [staging|prod]"
fi

if [ "$1" == "staging" ]; then
  npm run build && aws s3 sync build/ s3://$STAGING_BUCKET_NAME --profile kops
fi

if [ "$1" == "prod" ]; then
  npm run build && aws s3 sync build/ s3://$PROD_BUCKET_NAME --profile kops
fi
